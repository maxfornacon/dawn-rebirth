= simple_form_for @pin, html: {multipart: true} do |f|
	- if @pin.errors.any?
		#errors
			%h2
				= pluralize(@pin.errors.count, "Error")
				verhinderten das Speichern des Pins
			%ul
				- @pin.errors.full_messages.each do |msg|
					%li= msg
	%br
	.form-group
		= f.text_field :heading, required: true
		= f.label :heading, "Ãœberschrift"
		%span.bar

	.form-group
		= f.text_field :subheading, required: true
		= f.label :subheading, "Untertitel"
		%span.bar

	.form-group
		= f.text_area :description, maxlength: 222, required: true, class: "text-area"
		= f.label :description, "Text"
		%span.bar

	= f.button :submit
