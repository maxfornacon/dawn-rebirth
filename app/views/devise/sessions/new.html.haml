.container
  .forms
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %br
      %br
      .form-group
        = f.text_field :email, required: true
        = f.label :email
        %span.bar

      .form-group
        = f.password_field :password, autocomplete: "off", required: true
        = f.label :password, "Passwort"
        %span.bar

      - if devise_mapping.rememberable?
        .field#save-data
          = f.check_box :remember_me, class: 'checkbox light'
          = f.label :remember_me, "Daten speichern", class: 'label'

      .form-group
        = f.submit "Log in", class: "btn"
        %br
        = render "devise/shared/links"
