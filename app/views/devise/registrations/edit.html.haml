.darkroom
  %br
  .container
    .head
      %h3 Veränderung...
      %p ... ist Stärke!
    .body
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        .field
          = f.file_field :avatar
          %br/
          = f.label :avatar
          %br/
          %br/
        .field
          - if current_user.is_female == 1
            = f.radio_button :is_female, '1', checked: true
            = f.label :is_female, "♀"
            = f.radio_button :is_female, '0'
            = f.label :is_female, "♂"
          - else
            = f.radio_button :is_female, '1'
            = f.label :is_female, "♀"
            = f.radio_button :is_female, '0', checked: true
            = f.label :is_female, "♂"
          %br/
          %br/
        .field
          = f.date_select :date_of_birth, start_year: 1950, end_year: Date.current.year
          %br/
          = f.label :date_of_birth, "Geburtsdatum"
        .field
          = f.email_field :email
          %br/
          = f.label :email
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        .field
          = f.password_field :password, autocomplete: "off"
          %br/
          = f.label :password, "Passwort"
          %i (nichts eintragen falls Du nichts ändern möchtest)
        .field
          = f.password_field :password_confirmation, autocomplete: "off"
          %br/
          = f.label :password_confirmation, "Passwort bestätigen"
        .field
          = f.password_field :current_password, autocomplete: "off"
          %br/
          = f.label :current_password, "Aktuelles Passwort"
          %i (trage Dein aktuelles Passwort ein um die Änderungen zu bestätigen)
        .actions
          = f.submit "Aktualisieren", class: "btn"
      %p
        #{button_to "Account löschen", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn"}
      = link_to "zurück", :back