= render 'aside'
.main
	- if current_user.id == @user.id
		= link_to "+", new_pin_path, id: "new_pin"
	#pins.transitions-enabled
		- @pin.each do |pin|
			.box
				- if pin.image?
					= image_tag pin.image.url
				%p= pin.description
				%i #{I18n.l(pin.created_at, format: '%-d %B %Y')}
				= link_to like_pin_path(pin), method: :put do
					= image_tag("like_up.png", class: "votes")
					%span= pin.get_upvotes.size
				= link_to unlike_pin_path(pin), method: :put do
					= image_tag("like_down.png", class: "votes")
					%span= pin.get_downvotes.size
				- if current_user.id == pin.user_id or current_user.admin?
					= link_to "zum Pin", pin
