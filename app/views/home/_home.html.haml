.main
	.posts
		- if current_user.admin?
			= link_to "Neuer Post", new_post_path
		- @posts.each do |p|
			= render "posts/post", p: p
	.serious
		%h1.zentriert Serious - Trends
		- @pins.each do |pin|
			- if pin.get_upvotes.size > pin.get_downvotes.size or pin.get_upvotes.size == pin.get_downvotes.size
				.pin
					= render 'pins/pin', pin: pin
	.shit
		%h1.zentriert Weebshit - Trends
		- @pins.each do |pin|
			- if pin.get_downvotes.size > pin.get_upvotes.size
				.pin
					= render 'pins/pin', pin: pin
						
.side-box
	%h2 Neuste Otakus
	- @users = User.all.order("created_at DESC").limit(9)
	- @users.each do |user|
		= link_to user do
			= image_tag user.avatar.url(:small)
.side-box
	%h2 Neuste Gilden
	- @guilds = Guild.all.order("created_at DESC")
	- @guilds.each do |guild|
		= link_to guild_path(guild.id) do
			= image_tag guild.image.url(:standart)