			= link_to chat_path do 
				%i.icon-chat
				%span [---]
		.bar-section	                  
			%form{:action => "https://www.paypal.com/cgi-bin/webscr", :method => "post", :target => "_top"}
				%input{:name => "cmd", :type => "hidden", :value => "_s-xclick"}/
				%input{:name => "hosted_button_id", :type => "hidden", :value => "LD963DSDCQQR2"}/
				%input{:alt => "Jetzt einfach, schnell und sicher online bezahlen â€“ mit PayPal.", :border => "0", :name => "submit", :src => "https://www.paypalobjects.com/de_DE/DE/i/btn/btn_donateCC_LG.gif", :type => "image"}/
				%img{:alt => "", :border => "0", :height => "1", :src => "https://www.paypalobjects.com/de_DE/i/scr/pixel.gif", :width => "1"}/


	.posts
		- if current_user.admin?
			= link_to "Neuer Post", new_post_path
		- @posts.each do |p|
			= render "posts/post", p: p
	.serious
		%h1.zentriert Serious - Trends
		- @pins.each do |pin|
			- if pin.get_upvotes.size > pin.get_downvotes.size or pin.get_upvotes.size == pin.get_downvotes.size
				.pin
					= render 'pins/pin', pin: pin
	.shit
		%h1.zentriert Weebshit - Trends
		- @pins.each do |pin|
			- if pin.get_downvotes.size > pin.get_upvotes.size
				.pin
					= render 'pins/pin', pin: pin
						
.side-box
	%h2 Neuste Otakus
	- @users = User.all.order("created_at DESC").limit(9)
	- @users.each do |user|
		= link_to user do
			= image_tag user.avatar.url(:small)
.side-box
	%h2 Neuste Gilden
	- @guilds = Guild.all.order("created_at DESC")
	- @guilds.each do |guild|
		= link_to guild_path(guild.id) do
			= image_tag guild.image.url(:standart)